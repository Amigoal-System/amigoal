rules_version = '2';

// Amigoal Storage Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files.
    // This is useful for public assets like profile pictures, club logos, etc.
    match /{allPaths=**} {
      allow read;

      // Only allow authenticated users to write (create, update, delete) files.
      // This prevents unauthorized uploads and ensures data integrity.
      allow write: if request.auth != null;
    }
  }
}
